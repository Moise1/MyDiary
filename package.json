{
  "name": "mydiary",
  "version": "1.0.0",
  "description": "MyDiary is an online journal where users can pen down their thoughts and feelings.",
  "main": "server.js",
  "scripts": {
    "db:droptables": "node --require @babel/register ./SERVER/db/dropTable.js",
    "db:migrate": "node --require @babel/register ./SERVER/db/dbConnect.js",
    "start": "npm run db:droptables && npm run db:migrate && babel-watch  ./SERVER/server.js",
    "test": "NODE_ENV=test nyc --reporter=text --reporter=lcov mocha --timeout 1000 --require @babel/polyfill --require @babel/register SERVER/tests/**/*.test.js --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "./node_modules/.bin/eslint --fix ./SERVER/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Moise1/MyDiary.git"
  },
  "keywords": [
    "NodeJS",
    "Express",
    "PostgreSQL",
    "Diary",
    "App",
    "Note",
    "taking",
    "app"
  ],
  "author": "Moise1",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Moise1/MyDiary/issues"
  },
  "homepage": "https://github.com/Moise1/MyDiary#readme",
  "dependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "babel-cli": "^6.26.0",
    "babel-watch": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "slugify": "^1.3.5",
    "unique-slug": "^2.0.2"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/preset-stage-0": "^7.0.0",
    "@babel/register": "^7.4.0",
    "assert": "^2.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.3.0"
  }
}
